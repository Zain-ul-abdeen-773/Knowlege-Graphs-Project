<?xml version="1.0"?>
<rdf:RDF xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
         xmlns:xsd="http://www.w3.org/2001/XMLSchema#"
         xmlns:rdfs="http://www.w3.org/2000/01/rdf-schema#"
         xmlns:owl="http://www.w3.org/2002/07/owl#"
         xml:base="http://example.org/pkg2020/ontology.owl"
         xmlns="http://example.org/pkg2020/ontology.owl#">

<owl:Ontology rdf:about="http://example.org/pkg2020/ontology.owl"/>

<owl:ObjectProperty rdf:about="#writtenBy">
  <rdfs:domain rdf:resource="#Article"/>
  <rdfs:range rdf:resource="#Author"/>
</owl:ObjectProperty>

<owl:ObjectProperty rdf:about="#hasAuthorship">
  <rdfs:domain rdf:resource="#Article"/>
  <rdfs:range rdf:resource="#Authorship"/>
</owl:ObjectProperty>

<owl:ObjectProperty rdf:about="#refersToAuthor">
  <rdfs:domain rdf:resource="#Authorship"/>
  <rdfs:range rdf:resource="#Author"/>
</owl:ObjectProperty>

<owl:DatatypeProperty rdf:about="#hasPMID">
  <rdfs:domain rdf:resource="#Article"/>
  <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#string"/>
  <rdf:type rdf:resource="http://www.w3.org/2002/07/owl#InverseFunctionalProperty"/>
</owl:DatatypeProperty>

<owl:DatatypeProperty rdf:about="#lastName">
  <rdfs:domain rdf:resource="#Author"/>
  <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#string"/>
</owl:DatatypeProperty>

<owl:DatatypeProperty rdf:about="#foreName">
  <rdfs:domain rdf:resource="#Author"/>
  <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#string"/>
</owl:DatatypeProperty>

<owl:DatatypeProperty rdf:about="#initials">
  <rdfs:domain rdf:resource="#Author"/>
  <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#string"/>
</owl:DatatypeProperty>

<owl:DatatypeProperty rdf:about="#authorOrder">
  <rdfs:domain rdf:resource="#Authorship"/>
  <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#integer"/>
</owl:DatatypeProperty>

<owl:DatatypeProperty rdf:about="#publicationYear">
  <rdfs:domain rdf:resource="#PublicationYear"/>
  <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#integer"/>
</owl:DatatypeProperty>

<owl:DatatypeProperty rdf:about="#careerStartYear">
  <rdfs:domain rdf:resource="#Author"/>
  <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#integer"/>
</owl:DatatypeProperty>

<owl:Class rdf:about="#Article">
  <rdfs:subClassOf rdf:resource="http://www.w3.org/2002/07/owl#Thing"/>
  <rdfs:subClassOf>
    <owl:Restriction>
      <owl:onProperty rdf:resource="#writtenBy"/>
      <owl:onClass rdf:resource="#Author"/>
      <owl:minQualifiedCardinality rdf:datatype="http://www.w3.org/2001/XMLSchema#nonNegativeInteger">1</owl:minQualifiedCardinality>
    </owl:Restriction>
  </rdfs:subClassOf>
</owl:Class>

<owl:Class rdf:about="#Author">
  <rdfs:subClassOf rdf:resource="http://www.w3.org/2002/07/owl#Thing"/>
</owl:Class>

<owl:Class rdf:about="#Authorship">
  <rdfs:subClassOf rdf:resource="http://www.w3.org/2002/07/owl#Thing"/>
</owl:Class>

<owl:Class rdf:about="#PublicationYear">
  <rdfs:subClassOf rdf:resource="http://www.w3.org/2002/07/owl#Thing"/>
</owl:Class>

<owl:Class rdf:about="#ActiveAuthor">
  <rdfs:subClassOf rdf:resource="#Author"/>
  <owl:equivalentClass>
    <owl:Class>
      <owl:intersectionOf rdf:parseType="Collection">
        <rdf:Description rdf:about="#Author"/>
        <owl:Restriction>
          <owl:onProperty rdf:resource="#careerStartYear"/>
          <owl:someValuesFrom rdf:resource="http://www.w3.org/2001/XMLSchema#integer"/>
        </owl:Restriction>
      </owl:intersectionOf>
    </owl:Class>
  </owl:equivalentClass>
</owl:Class>

<owl:Class rdf:about="#ResearchEntity">
  <rdfs:subClassOf rdf:resource="http://www.w3.org/2002/07/owl#Thing"/>
  <owl:equivalentClass>
    <owl:Class>
      <owl:unionOf rdf:parseType="Collection">
        <rdf:Description rdf:about="#Author"/>
        <rdf:Description rdf:about="#Article"/>
      </owl:unionOf>
    </owl:Class>
  </owl:equivalentClass>
</owl:Class>

<owl:Class rdf:about="#AnonymousAuthor">
  <rdfs:subClassOf rdf:resource="#Author"/>
  <owl:equivalentClass>
    <owl:Class>
      <owl:intersectionOf rdf:parseType="Collection">
        <rdf:Description rdf:about="#Author"/>
        <owl:Class>
          <owl:complementOf rdf:resource="#ActiveAuthor"/>
        </owl:Class>
      </owl:intersectionOf>
    </owl:Class>
  </owl:equivalentClass>
</owl:Class>


</rdf:RDF>
